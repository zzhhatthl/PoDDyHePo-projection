citHeader("To cite csprojections in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(
  entry    = "manual",
  title    = "{csprojections}: PoDDy-HePo Projections Using Multiple Imputation",
  author   = c(person("Zhi", "Zhou"),
               person("Jaakko", "Reinikanen"),
               person("Tommi", "H채rk채nen"),
               person("Hanna", "Tolonen"),
               person("et al")),
  year     = year,
  note     = note,
  url      = "https://zenodo.org/badge/latestdoi/431036940",
  textVersion = 
  paste0(
  "Zhou Z, Reinikanen J, H채rk채nen T, Tolonen H, et al",
                "Department of Public Health and Welfare, Finnish Institute for Health and Welfare (THL) (",
                year,
                "). csprojections: PoDDy-HePo Projections Using Multiple Imputation. ",
                note, ".")
)